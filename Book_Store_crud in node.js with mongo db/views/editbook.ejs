<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit-Book</title>
    <link rel="stylesheet" href="/CSS/addbook.css" />
  </head>
  <body>
    <form
      class="glass-form"
      action="/updatebook/?id=<%=oldEditData.id%>"
      method="post"
      enctype="multipart/form-data"
    >
      <h2>Edit Book</h2>

      <div class="form-group">
        <label for="image">Old Book Cover Image</label>

        <img id="preview" src="/<%=oldEditData.image%>" />
        <label class="image-upload" for="image">
          Click to choose New image
          <input
            type="file"
            id="image"
            name="image"
            onchange="previewImage(event)"
          />
        </label>
      </div>

      <div class="form-group">
        <label for="title">Book Title</label>
        <input
          type="text"
          id="title"
          name="title"
          placeholder="Enter book title"
          value="<%=oldEditData.title%>"
          required
        />
      </div>

      <div class="form-group">
        <label for="author">Author Name</label>
        <input
          type="text"
          id="author"
          name="author"
          placeholder="Enter author name"
          value="<%=oldEditData.author%>"
          required
        />
      </div>

      <div class="form-group">
        <label for="price">Price (â‚¹)</label>
        <input
          type="number"
          id="price"
          name="price"
          placeholder="Enter price"
          value="<%=oldEditData.price%>"
          required
        />
      </div>

      <div class="form-group">
        <label for="releaseDate">Release Date</label>
        <input
          type="date"
          id="releaseDate"
          name="releaseDate"
          value="<%=oldEditData.releaseDate%>"
          required
        />
      </div>

      <div class="form-group">
        <label for="description">Description</label>
        <textarea
          id="description"
          name="description"
          placeholder="Enter book description"
          required
        >
<%=oldEditData.description%> </textarea
        >
      </div>

      <button type="submit" class="submit-btn">Submit</button>
    </form>

    <script>
      function previewImage(event) {
        const input = event.target;
        const preview = document.getElementById("preview");

        if (input.files && input.files[0]) {
          const reader = new FileReader();

          reader.onload = function (e) {
            preview.src = e.target.result;
            // preview.style.display = "block";
          };

          reader.readAsDataURL(input.files[0]);
        }
      }
    </script>
  </body>
</html>
