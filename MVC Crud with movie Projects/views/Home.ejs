    <footer class="bg-dark text-light pt-4 mt-5">
      <div class="container text-center text-md-start">
        <div class="row">
          <!-- About Section -->
          <div class="col-md-4 mb-3">
            <h5>About Us</h5>
            <p>
              Lorem ipsum dolor sit amet, consectetur adipiscing elit. Duis sed
