          <!-- Social Media Icons -->
          <div class="col-md-4 mb-3 text-center social-icons">
            <h5>Follow Us</h5>
            <a href="#" class="text-light me-3"
              ><i class="bi bi-instagram fs-2"></i
            ></a>
            <a href="#" class="text-light me-3"
              ><i class="bi bi-facebook fs-2"></i
            ></a>
            <a href="#" class="text-light me-3"
              ><i class="bi bi-linkedin fs-2"></i
